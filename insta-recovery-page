  <script>
    const $ = (s) => document.querySelector(s);
    const $$ = (s) => Array.from(document.querySelectorAll(s));

    // Incident details save/load
    const saveBtn = $('#saveIncident');
    const saveMsg = $('#saveMsg');
    const fields = ['username','email','story'];

    function loadIncident(){
      fields.forEach(id => { const v = localStorage.getItem('ig_'+id); if(v) $('#'+id).value = v; });
    }
    function saveIncident(){
      fields.forEach(id => localStorage.setItem('ig_'+id, $('#'+id).value.trim()));
      saveMsg.style.display = 'block';
      setTimeout(() => saveMsg.style.display = 'none', 2000);
    }
    saveBtn.addEventListener('click', saveIncident);
    loadIncident();

    // Checklist persistence
    const checklist = $('#checklist');
    function loadChecklist(){
      $$('#checklist input[type="checkbox"]').forEach(cb => {
        const key = cb.dataset.key; const v = localStorage.getItem('ig_ck_'+key);
        cb.checked = v === '1';
      });
      updateAllDone();
    }
    function updateAllDone(){
      const all = $$('#checklist input[type="checkbox"]').every(cb => cb.checked);
      $('#allDone').style.display = all ? 'block' : 'none';
    }
    checklist.addEventListener('change', (e)=>{
      if(e.target.matches('input[type="checkbox"]')){
        const key = e.target.dataset.key;
        localStorage.setItem('ig_ck_'+key, e.target.checked ? '1' : '0');
        updateAllDone();
      }
    });
    loadChecklist();

    // Recovery log
    const logKey = 'ig_recovery_log';
    const logList = $('#logList');

    function getLog(){
      try { return JSON.parse(localStorage.getItem(logKey)) || []; } catch { return []; }
    }
    function setLog(items){ localStorage.setItem(logKey, JSON.stringify(items)); renderLog(); }

    function renderLog(){
      const items = getLog();
      logList.innerHTML = items.map((it,i)=>`<div class="log-item"><div class="muted" style="font-size:.8rem">${new Date(it.t).toLocaleString()}</div><div>${it.txt}</div></div>`).join('');
    }

    $('#addLog').addEventListener('click', () => {
      const txt = $('#logText').value.trim();
      const t = $('#logTime').value ? new Date($('#logTime').value).toISOString() : new Date().toISOString();
      if(!txt) return;
      const items = getLog();
      items.unshift({ t, txt });
      setLog(items);
      $('#logText').value = '';
      $('#logTime').value = '';
    });

    $('#exportLog').addEventListener('click', () => {
      const data = new Blob([localStorage.getItem(logKey) || '[]'], {type: 'application/json'});
      const url = URL.createObjectURL(data);
      const a = document.createElement('a');
      a.href = url; a.download = 'instagram-recovery-log.json'; a.click();
      URL.revokeObjectURL(url);
    });

    $('#clearLog').addEventListener('click', () => { if(confirm('Clear your local recovery log?')) { localStorage.removeItem(logKey); renderLog(); } });

    // Year
    $('#year').textContent = new Date().getFullYear();

    // Prefill timestamp
    const dt = new Date();
    dt.setMinutes(dt.getMinutes() - dt.getTimezoneOffset());
    const iso = dt.toISOString().slice(0,16);
    const logTime = document.getElementById('logTime');
    if (logTime) logTime.value = iso;
  </script>
